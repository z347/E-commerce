{
  "version": 2,
  "cli": {
    "defaultCollection": "@nrwl/next"
  },
  "defaultProject": "client",
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "scss",
        "linter": "eslint"
      }
    }
  },
  "projects": {
    "client": {
      "root": "apps/front-end/client",
      "sourceRoot": "apps/front-end/client",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/next:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "root": "apps/front-end/client",
            "outputPath": "dist/apps/front-end/client"
          },
          "configurations": {
            "production": {}
          }
        },
        "serve": {
          "executor": "@nrwl/next:server",
          "options": {
            "buildTarget": "client:build",
            "dev": true,
            "port": 3000,
            "proxyConfig": "apps/front-end/client/proxy.conf.json"
          },
          "configurations": {
            "production": {
              "buildTarget": "client:build:production",
              "dev": false
            }
          }
        },
        "export": {
          "executor": "@nrwl/next:export",
          "options": {
            "buildTarget": "client:build:production"
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/front-end/client/**/*.{ts,tsx,js,jsx}"]
          }
        }
      }
    },
    "api": {
      "root": "apps/back-end/api",
      "sourceRoot": "apps\\back-end\\api\\src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/node:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/apps/back-end/api",
            "main": "apps/back-end/api/src/main.ts",
            "tsConfig": "apps/back-end/api/tsconfig.app.json"
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "apps/back-end/api/src/environments/environment.ts",
                  "with": "apps/back-end/api/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/node:execute",
          "options": {
            "buildTarget": "api:build",
            "port": 3100
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/back-end/api/**/*.ts"]
          }
        }
      }
    }
  }
}
